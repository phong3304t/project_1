<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10" vgap="10" padding="20"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/23"
          fx:controller="com.testapi.Api">
        <Label text="Book Search Application" style="-fx-font-size: 18px; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" />

        <Label text="Enter ISBN or Title:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="searchField" promptText="Enter ISBN or Title" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Button text="Search" onAction="#handleSearch" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" />

        <Label text="Results:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-font-weight: bold;" />
        <TextArea fx:id="resultArea" prefRowCount="10" wrapText="true" editable="false" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" />
</GridPane>