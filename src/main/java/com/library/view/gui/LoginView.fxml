<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.library.view.gui.LoginController" spacing="20" alignment="CENTER">

    <!-- Đăng nhập cho người dùng bình thường -->
    <GridPane hgap="10" vgap="10">
        <TextField fx:id="userUsernameField" promptText="User Username"/>
        <PasswordField fx:id="userPasswordField" promptText="User Password"/>
        <Button text="Login as User" onAction="#handleUserLoginAction"/>
    </GridPane>

    <!-- Đăng nhập cho admin -->
    <GridPane hgap="10" vgap="10">
        <TextField fx:id="adminUsernameField" promptText="Admin Username"/>
        <PasswordField fx:id="adminPasswordField" promptText="Admin Password"/>
        <Button text="Login as Admin" onAction="#handleAdminLoginAction"/>
    </GridPane>

</HBox>


