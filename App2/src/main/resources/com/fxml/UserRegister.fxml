<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.gui.LoginController"
          alignment="CENTER"
          hgap="10" vgap="10"
          style="-fx-background-color: white;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="User Registration"
           GridPane.rowIndex="0"
           GridPane.columnSpan="2"
           style="-fx-font-size: 24px; -fx-text-fill: #007acc;
            -fx-font-weight: bold; -fx-alignment: center;"/>

    <!-- Name Field -->
    <Label text="Name:"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="nameField"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- Email Field -->
    <Label text="Email:"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="userEmailField"
               GridPane.rowIndex="2"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- Password Field -->
    <Label text="Password:"
           GridPane.rowIndex="3"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <PasswordField fx:id="userPasswordField"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="1"
                   style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                    -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- Buttons Section -->
    <HBox spacing="10" alignment="CENTER"
          GridPane.rowIndex="4" GridPane.columnSpan="2">
        <Button text="Register"
                GridPane.columnIndex="1"
                style="-fx-background-color: #007acc; -fx-text-fill: white;
                 -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleUserRegisterAction"/>
        <Button text="Back"
                GridPane.columnIndex="2"
                style="-fx-background-color: #ff4d4d; -fx-text-fill: white;
                -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleBackAction"/>
    </HBox>
</GridPane>
