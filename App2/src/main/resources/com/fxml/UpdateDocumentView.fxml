<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.DocumentController"
          alignment="CENTER"
          hgap="10" vgap="10"
          style="-fx-background-color: white;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Update Document"
           GridPane.rowIndex="0"
           GridPane.columnSpan="4"
           style="-fx-font-size: 24px; -fx-text-fill: #007acc;
            -fx-font-weight: bold; -fx-alignment: center;"/>

    <!-- Column 1 -->
    <Label text="ISBN:"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="ISBNField"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Type:"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="typeField"
               GridPane.rowIndex="2"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Title:"
           GridPane.rowIndex="3"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="titleField"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Author:"
           GridPane.rowIndex="4"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="authorField"
               GridPane.rowIndex="4"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Quantity:"
           GridPane.rowIndex="5"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="quantityField"
               GridPane.rowIndex="5"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- Column 2 -->
    <Label text="Publisher:"
           GridPane.rowIndex="1"
           GridPane.columnIndex="2"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="publisherField"
               GridPane.rowIndex="1"
               GridPane.columnIndex="3"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Categories:"
           GridPane.rowIndex="2"
           GridPane.columnIndex="2"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="categoriesField"
               GridPane.rowIndex="2"
               GridPane.columnIndex="3"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Description:"
           GridPane.rowIndex="3"
           GridPane.columnIndex="2"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextArea fx:id="descriptionArea"
              GridPane.rowIndex="3"
              GridPane.columnIndex="3"
              style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
               -fx-border-radius: 5px; -fx-padding: 5px; -fx-pref-height: 80px;"/>

    <Label text="Page Number:"
           GridPane.rowIndex="4"
           GridPane.columnIndex="2"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="pageNumberField"
               GridPane.rowIndex="4"
               GridPane.columnIndex="3"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Batch (Photo):"
           GridPane.rowIndex="5"
           GridPane.columnIndex="2"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="batchField"
               GridPane.rowIndex="5"
               GridPane.columnIndex="3"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- Button Section -->
    <HBox GridPane.rowIndex="6" GridPane.columnSpan="4"
          spacing="10" alignment="CENTER">
        <Button text="Update Document"
                GridPane.columnIndex="1"
                style="-fx-background-color: #007acc; -fx-text-fill: white;
                 -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleUpdateDocumentAction"/>

        <Button text="Back"
                GridPane.columnIndex="2"
                style="-fx-background-color: red; -fx-text-fill: white;
                 -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleBackAdminAction"/>
    </HBox>
</GridPane>
