<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.TransactionController"
          alignment="CENTER"
          hgap="10" vgap="10"
          style="-fx-background-color: white;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Borrow Document"
           GridPane.rowIndex="0"
           GridPane.columnSpan="2"
           style="-fx-font-size: 24px; -fx-text-fill: #007acc;
            -fx-font-weight: bold; -fx-alignment: center;"/>

    <!-- ISBN Field -->
    <Label text="ISBN:"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="ISBNField"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Type of Document:"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="docTypeField"
               GridPane.rowIndex="2"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Batch (Photo):"
           GridPane.rowIndex="3"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="batchField"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- User ID Field -->
    <Label text="User ID:"
           GridPane.rowIndex="4"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="userIdField"
               GridPane.rowIndex="4"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- Borrow Date Field -->
    <Label text="Borrow Date:"
           GridPane.rowIndex="5"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <DatePicker fx:id="borrowDatePicker"
                GridPane.rowIndex="5"
                GridPane.columnIndex="1"
                style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                 -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Due Date:"
           GridPane.rowIndex="6"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <DatePicker fx:id="dueDatePicker"
                GridPane.rowIndex="6"
                GridPane.columnIndex="1"
                style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                 -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <!-- Buttons Section -->
    <HBox spacing="10" alignment="CENTER"
          GridPane.rowIndex="7" GridPane.columnSpan="3">
        <Button text="Borrow"
                GridPane.columnIndex="1"
                style="-fx-background-color: #007acc; -fx-text-fill: white;
                 -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleBorrowDocumentAction"/>
        <Button text="Back"
                GridPane.columnIndex="2"
                style="-fx-background-color: #ff4d4d; -fx-text-fill: white;
                 -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleBackAdminAction"/>
    </HBox>
</GridPane>
