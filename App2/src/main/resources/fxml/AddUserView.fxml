<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.controller.UserController"
          alignment="CENTER"
          hgap="10" vgap="10"
          style="-fx-background-color: white;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Add New User"
           GridPane.rowIndex="0"
           GridPane.columnSpan="4"
           style="-fx-font-size: 24px; -fx-text-fill: #007acc;
            -fx-font-weight: bold; -fx-alignment: center;"/>

    <!-- Column 1 -->
    <Label text="Name:"
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="nameField"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Email:"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="emailField"
               GridPane.rowIndex="2"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Password:"
           GridPane.rowIndex="3"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <PasswordField fx:id="passwordField"
               GridPane.rowIndex="3"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label text="Borrowed (new user is 0):"
           GridPane.rowIndex="4"
           GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-text-fill: #007acc;"/>
    <TextField fx:id="borrowedDocumentsField"
               GridPane.rowIndex="4"
               GridPane.columnIndex="1"
               style="-fx-background-color: #f0f8ff; -fx-border-color: #007acc;
                -fx-border-radius: 5px; -fx-padding: 5px;"/>

    <Label fx:id="userStatusLabel"
           style="-fx-text-fill: #e74c3c;"
           GridPane.rowIndex="5"
           GridPane.columnIndex="1"/>

    <!-- Button Section -->
    <HBox GridPane.rowIndex="5" GridPane.columnSpan="4"
          spacing="10" alignment="CENTER">
        <Button text="Add User"
                GridPane.columnIndex="1"
                style="-fx-background-color: #007acc; -fx-text-fill: white;
                 -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleAddUserAction"/>

        <Button text="Back"
                GridPane.columnIndex="2"
                style="-fx-background-color: red; -fx-text-fill: white;
                 -fx-font-size: 12px; -fx-padding: 10px 20px; -fx-background-radius: 5px;"
                onAction="#handleBackAdminAction"/>
    </HBox>
</GridPane>
